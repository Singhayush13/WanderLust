                <a class="nav-link" href="/signup" style="padding: 10px 15px; color: #495057; font-weight: 500;">Sign up</a>
                <a class="nav-link" href="/login" style="padding: 10px 15px; color: #495057; font-weight: 500;">Log In</a>
                <% } %>
