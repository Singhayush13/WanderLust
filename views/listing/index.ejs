 <% layout("/layout/boilerplate") %>
<body>
    <%= success %>
    <h3 class="text-center my-4" style="color: #dc3545; font-weight: 600;">All Listings</h3>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4">
        <% for(let listing of allListing) { %>
            <a href="/listings/<%= listing._id %>" class="listing-link" style="text-decoration: none; color: inherit;">
                <div class="card listing-card" style="border: 1px solid #dc3545; border-radius: 0.5rem; transition: box-shadow 0.3s; overflow: hidden;">
                    <img src="<%= listing.image.url%>" class="card-img-top" alt="Listing Image" style="height: 20rem; object-fit: cover;">
                    <div class="card-body" style="padding: 1.25rem;">
                        <p class="card-text">
                            <b style="color: #dc3545;"><%= listing.title %></b> <br>
                            <% if (listing.price != null) { %>
                                <span style="color: #dc3545;">&#8377; <%= listing.price.toLocaleString("en-IN") %> / Night</span>
                            <% } else { %>
                                <span style="color: #dc3545;">Price not available</span>
                            <% } %>
                        </p>
                    </div>
                </div>
            </a>
        <% } %>
    </div>

    <style>
        .listing-card {
            transition: box-shadow 0.3s; /* Smooth shadow transition */
        }

        .listing-card:hover {
            box-shadow: 0 4px 15px rgba(220, 53, 69, 0.5); /* Shadow effect on hover */
        }

        h3 {
            text-align: center;
        }
    </style>
</body>

