<% layout("/layout/boilerplate") %>

<div class="container mt-5">
    <h2 class="text-center mb-4 font-weight-bold" style="color: #dc3545;">Contact Us</h2>
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <form action="/contact" method="POST" novalidate class="needs-validation">
                <div class="mb-3">
                    <label for="username" class="form-label" style="color: #343a40;">Name</label>
                    <input type="text" class="form-control" id="username" name="username" required>
                    <div class="invalid-feedback">Please enter your name.</div>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label" style="color: #343a40;">Email</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                    <div class="invalid-feedback">Please enter your email.</div>
                </div>
                <div class="mb-3">
                    <label for="query" class="form-label" style="color: #343a40;">Query</label>
                    <textarea class="form-control" id="query" name="query" rows="5" required></textarea>
                    <div class="invalid-feedback">Please enter your query.</div>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-danger px-4 py-2">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .btn-danger {
        background-color: #dc3545; /* Button background color */
        border: none; /* Remove default border */
        transition: background-color 0.3s, color 0.3s; /* Add transition */
    }

    .btn-danger:hover {
        background-color: #c82333; /* Darker shade on hover */
        color: white; /* Change text color on hover */
    }

    .form-control {
        border: 1px solid #dc3545; /* Input border color */
        transition: border-color 0.3s; /* Transition for border */
    }

    .form-control:focus {
        border-color: #c82333; /* Focus border color */
        box-shadow: 0 0 5px rgba(220, 53, 69, 0.5); /* Focus shadow */
    }

    @media (max-width: 768px) {
        .form-label {
            font-size: 1.1rem; /* Increase font size for smaller screens */
        }
    }
</style>
